{
  "dashboard": {
    "id": null,
    "title": "OpenAdmin Application Metrics",
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "type": "graph",
        "title": "JVM Memory Usage",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{area=\"heap\"}",
            "legendFormat": "{{application}} - Heap Used"
          },
          {
            "expr": "jvm_memory_max_bytes{area=\"heap\"}",
            "legendFormat": "{{application}} - Heap Max"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "id": 2,
        "type": "graph",
        "title": "HTTP Requests Rate",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count[1m])",
            "legendFormat": "{{application}} - {{method}} {{uri}}"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "id": 3,
        "type": "stat",
        "title": "System Health",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 8,
          "h": 6
        },
        "targets": [
          {
            "expr": "up",
            "legendFormat": "{{job}}"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "id": 4,
        "type": "graph",
        "title": "Thread Count",
        "gridPos": {
          "x": 8,
          "y": 8,
          "w": 8,
          "h": 6
        },
        "targets": [
          {
            "expr": "jvm_threads_live_threads",
            "legendFormat": "{{application}}"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "id": 5,
        "type": "graph",
        "title": "Garbage Collection",
        "gridPos": {
          "x": 16,
          "y": 8,
          "w": 8,
          "h": 6
        },
        "targets": [
          {
            "expr": "rate(jvm_gc_pause_seconds_count[1m])",
            "legendFormat": "{{application}} - {{action}}"
          }
        ],
        "datasource": "Prometheus"
      }
    ]
  }
}